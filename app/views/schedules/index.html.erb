<br />

<div class="booyah-box col-12">
  <h1 class="text-center">SCHEDULE</h1>
  <hr />    
    <% @schedules.each do |schedule| %>
      <div class="row">
        <div class="booyah-box col-3 left">
        
          <h3 class="text-center"><%= schedule.project.job_name %></h3>

          <h4 class="text-center">Location: <%= schedule.location %></h4>
          <h4 class="text-center">Lot Count: <%= schedule.lot_count %></h4>
        </div>
        <div class="booyah-box col-9">
          <%= week_calendar number_of_weeks: 1 do |date| %>
            <%= date %>
          <% end %>
        </div>
      </div>
      <br>
    <% end %>

  
  
</div>
<br>
<div class="booyah-box col-12">
  <div class="booyah-box col-12">
    <div><h4 class="left">TASKS: </h4><%= link_to 'Add Task', new_admin_task_path, class: 'nav-link' %></div>
      
      <% @tasks.each do |task| %>
      <div class="card col-6-sm col-2-md" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= task.title %></h5>
          <p class="card-text"><%= task.description %></p>
        </div>
      </div>
      <% end %>
    <br>
  </div>
  <div class="booyah-box col-12">
    <div><h4 class="left">CREWS: </h4><%= link_to 'Add Crew', new_admin_crew_path, class: 'nav-link' %></div>
    <br>
  </div>
  <div class="booyah-box col-12">
    <div><h4 class="left">Equipment: </h4><%= link_to 'Add Equipment', new_admin_equipment_path, class: 'nav-link' %></div>
    <br>
  </div>
  <div class="booyah-box col-12">
    <h4 class="left">MY GROUPS:</h4>
    <br>
  </div>
</div>
<br>
<div class="booyah-box col-12">
  <h4 class="left">CONFLICTS:</h4>
  <br>
</div>