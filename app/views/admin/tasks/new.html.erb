<br />
<div class="booyah-box col-10 offset-1">
  <h1>Add a new task</h1>
  <%= simple_form_for @task, url: admin_tasks_path(@user) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <br>
    <%= f.submit "Add the Task" %>
    <% if @task.errors.any? %>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
    <br />
    <br />
  <% end %>
</div>