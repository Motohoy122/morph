<br />
<div class="booyah-box col-10 offset-1">
  <h1>Add a new crew</h1>
  <%= simple_form_for @crew, url: admin_crews_path(@user) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <br>
    <%= f.submit "Add the crew" %>
    <br />
    <br />
    <ul>
      <% @crew.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>